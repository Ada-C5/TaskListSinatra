<% @query = Queries.new %>
<% alltasks =	@query.show_completed_tasks %>

<div class="task-container">
	<% alltasks.each do |task| %>
		<div class="task-item"> 
			<p>
				<% task[0] %>
			  <br>
			  <%= task[1] %>
				<br>
				<%= task[2] %>
				<br>
				<%= task[3] %>
				<br>
			</p>
		</div>
	<% end %>
</div>