  <article>
    <% if @all_tasks %>
    <% @all_tasks.each do |task| %>
    <section>
      <div class="floating <%= task[3] == 'Completed' ? 'completed' : '' %>">
        <section class="card-head">
          <strong> <h3><%= task[1] %></h3></strong>
        </section>
        <div>
          <strong>Priority</strong> : <div class="<%= task[2] %>"><%= task[2] %></div>
        </div>
        <div>
          <strong>Status</strong> : <%= task[3] %> <br/>
        </div>
        <div>
          <strong>Date Created</strong> : <%= task[4] %> <br/>
        </div>
        <div>
          <strong>Due Date</strong> : <%= task[5] %> <br/>
        </div>
        <div>
          <strong>Comments</strong> : <%= task[6] %> <br/>
        </div>
        <div>
          <strong>Date Completed</strong> : <%= task[7] %>
        </div>
        <section class="action-buttons">
          <form action="/edit" method "get">
            <input type="submit" value = "edit">
            <input type="hidden" name= 'task_id' value="<%= task[0]%>">
          </form>
          <form action="/delete" method="post">
            <input type="submit" value="Delete" onclick="return confirm('Are you sure?')"/>
            <input type="hidden" name="task_id" value="<%= task[0] %>"/>
          </form>
        </section>
      </div>
    </section>
    <% end %>
    <% end %>
  </article>

