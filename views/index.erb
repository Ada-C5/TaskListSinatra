

<header>
  <h1> To Do List </h1>
</header>

<nav>
    <ul>
      <li><a href='/'>Home</a></li>

      <li><a href='/new-task'>Add a New Task!</a></li>
    </ul>
</nav>


<main>
  <!-- <%= params %> -->

  <% tasks_to_do = @task_list_database.all_incomplete_tasks %>


    <% tasks_to_do.each do |task| %>
      <div>
        <h2>
          <%= task[1] %>
        </h2>
        <p>
          <%= task[2] %>
        </p>

        <form action="" method="post">
          <!-- <input type="button" onlick = "post" name="completed" value="true">Completed -->
          <input type="hidden" name=completed[] value="">
          <input type="hidden" name=completed[] value="<%=task[0]%>">
          <input type="submit" value = "Completed!">

          <!-- <input type="submit" value="Ok"> -->
        </form>
      </div>
    <% end %>



</main>
