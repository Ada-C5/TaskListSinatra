<h1>TaskList</h1>
<!-- <img src="images/construction.gif" alt="Construction worker"/> -->
<a href="/add">Add a new task</a>
<section>
  <% if @all_tasks %>
  <table>
    <tr>
      <td>ID</td>
      <td>Task</td>
      <td>Priority</td>
      <td>Status</td>
      <td>Date Created</td>
      <td>Due Date</td>
      <td>Comments</td>
      <td>Delete?</td>
    </tr>
    <tr>
      <% @all_tasks.each do |value| %>
    </tr>
    <% value.each do |index| %>
    <td><%= index %></td>
    <% end %>
    <td>
      <form action="/delete" method="post">
        <input type="submit" value="Delete?"/>
        <input type="hidden" name="task_id" value="<%= value[0] %>"/>
      </form>
    </td>
    <% end %>
  </table>
  <% end %>
</section>
