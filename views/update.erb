<section>
	<fieldset>
	<legend>Update a Task</legend>
		<form action="/update" method="post" accept-charset="utf-8">
		  <input type="hidden" name="tasks[id]" value="<%= @task[0] %>" id="id">

		  <label for="title">Title</label>
		  <input type="text" name="tasks[title]" value="<%= @task[1] %>" id="title">

		  <label for="description">Description</label>
		  <input type="text" name="tasks[description]" value="<%= @task[2] %>" id="description">

		  <label for="completed_at">Completed At:</label>
		  <input type="text" name="tasks[completed_at]" value="<%= @task[3] %>" id="completed_at">

		  <input type="submit" value="Submit">
		</form>
	</fieldset>
</section>
